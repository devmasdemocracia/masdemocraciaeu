namespace :deploy do
  desc 'Commands for unicorn application'
  %w(start stop status restart enable disable).each do |command|
    task command.to_sym do
      on roles(:app), in: :sequence, wait: 5 do
        execute "sudo systemctl #{command} unicorn_#{fetch(:full_app_name)}_#{fetch(:stage)}.service"
      end
    end
  end
end
