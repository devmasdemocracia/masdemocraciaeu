<% if Setting["meta_title"].present? %>
  <% provide :title do %><%= Setting["meta_title"] %><% end %>
<% end %>

<h2><%= t("welcome.welcome.title") %></h2>

<div class="user-permissions">

  <p><%= t("welcome.welcome.user_permission_info") %></p>

  <ul>
    <li><span class="icon-check"></span>&nbsp;<%= t("welcome.welcome.user_permission_proposal_participate") %></li>
    <li><span class="icon-check"></span>&nbsp;<%= t("welcome.welcome.user_permission_proposal") %></li>
    <% if setting['org_name'] != "MASDEMOCRACIAEUROPA" %>

      <li>
        <% if current_user.level_two_or_three_verified? %>
          <span class="icon-check"></span>
        <% else %>
          <span class="icon-x"></span>
        <% end %>
        <%= t("welcome.welcome.user_permission_support_proposal") %>
      </li>
      <li>
        <% if current_user.level_three_verified? %>
          <span class="icon-check"></span>
        <% else %>
          <span class="icon-x"></span>
        <% end %>
        <%= t("welcome.welcome.user_permission_votes") %>
      </li>

    <% end %>
  </ul>

  <% if setting['org_name'] != "MASDEMOCRACIAEUROPA" %>

    <p>
      <span><%= t("welcome.welcome.user_permission_verify_info") %></span>
    </p>

    <p>
      <%= t("welcome.welcome.user_permission_verify") %>
    </p>

    <% if current_user.level_three_verified? %>
      <ul>
        <li>
          <span class="icon-check"></span>
          <%= t("account.show.verified_account") %>
        </li>
      </ul>
    <% else %>
      <%= link_to(t("welcome.welcome.user_permission_verify_my_account"), verification_path, class: "button success radius expand") %>
    <% end %>
  <% end %>

  <p>
    <%= link_to t("verification.letter.edit.see_all"), proposals_path, class: "button success radius expand" %>
  </p>
</div>
