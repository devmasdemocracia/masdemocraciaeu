<footer>
  <div class="row">
    <div class="footer-sections small-12 column">
      <div class="small-12 medium-4 column border-b">
        <p><strong><%= t("layouts.footer.project_text") %></strong></p>
        <%= link_to "https://www.esglobal.org/", target: :blank do %>
          <%= image_tag "logo_es_global.png",
                        alt: "Esglobal: Política, economía e ideas sobre el mundo en español" %>
        <% end %>
      </div>
      <div class="small-12 medium-4 column border-b">
        <p><strong><%= t("layouts.footer.colaboration_text") %></strong></p>
        <div class="collaborator-logos">
          <%= link_to "https://www.ecfr.eu/madrid", target: :blank do %>
            <%= image_tag "logo_european_council.png",
                          alt: "Página de la oficina de Madrid de ECFR",
                          class: 'collaborator-logo' %>
          <% end %>
          <%= link_to "http://www.rockandror.com", target: :blank do %>
            <%= image_tag "rockandror.png",
                          alt: "Rock&RoR Agile web development studio",
                          class: 'collaborator-logo rockandror' %>
          <% end %>
        </div>
      </div>
      <div class="small-12 medium-4 column">
        <p><strong><%= t("layouts.footer.support_text") %></strong></p>
        <%= link_to "http://www.exteriores.gob.es/", target: :blank do %>
          <%= image_tag("logo_gob_esapna.png", alt: "Ministerio de Asuntos Exteriores y de Cooperación") %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="subfooter row">
    <div class="small-12 medium-8 column">
      <%= t("layouts.footer.copyright", year: Time.current.year) %>&nbsp;|
      <ul class="no-bullet inline-block">
        <li class="inline-block"><%= link_to t("layouts.footer.privacy"), page_path(t('pages.slugs.privacy')) %>&nbsp;|</li>
        <li class="inline-block"><%= link_to t("layouts.footer.conditions"), page_path(t('pages.slugs.terms_and_conditions')) %>&nbsp;|</li>
        <li class="inline-block"><%= link_to t("layouts.footer.legal_disclaimer"), page_path(t('pages.slugs.legal_notice')) %>&nbsp;|</li>
        <li class="inline-block"><%= link_to t("layouts.footer.accessibility"), page_path('accessibility') %></li>
      </ul>
      <p><%= t("layouts.footer.consul_html", link: "https://github.com/consul/consul") %></p>
    </div>

    <div class="small-12 medium-4 column social">
      <div class="text-right">
        <ul>
          <% if setting['twitter_handle'] %>
            <li class="inline-block">
              <%= link_to "https://twitter.com/#{setting['twitter_handle']}", target: "_blank",
                          title: t("shared.go_to_page") + t("social.twitter", org: 'MásDemocraciaEnEuropa') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.twitter", org: 'MásDemocraciaEnEuropa') %></span>
                <span class="icon-twitter" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <% if setting['facebook_handle'] %>
            <li class="inline-block">
              <%= link_to "https://www.facebook.com/#{setting['facebook_handle']}/", target: "_blank",
                          title: t("shared.go_to_page") + t("social.facebook", org: 'MásDemocraciaEnEuropa') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.facebook", org: 'MásDemocraciaEnEuropa') %></span>
                <span class="icon-facebook" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <%  if setting['blog_url'] %>
            <li class="inline-block">
              <%= link_to setting['blog_url'], target: "_blank",
                          title: t("shared.go_to_page") + t("social.blog", org: 'MásDemocraciaEnEuropa') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.blog", org: 'MásDemocraciaEnEuropa') %></span>
                <span class="icon-blog" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <% if setting['youtube_handle'] %>
            <li class="inline-block">
              <%= link_to "https://www.youtube.com/#{setting['youtube_handle']}", target: "_blank",
                          title: t("shared.go_to_page") + t("social.youtube", org: 'MásDemocraciaEnEuropa') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.youtube", org: 'MásDemocraciaEnEuropa') %></span>
                <span class="icon-youtube" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <% if setting['telegram_handle'] %>
            <li class="inline-block">
              <%= link_to "https://www.telegram.me/#{setting['telegram_handle']}", target: "_blank",
                          title: t("shared.go_to_page") + t("social.telegram", org: 'MásDemocraciaEnEuropa') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.telegram", org: 'MásDemocraciaEnEuropa') %></span>
                <span class="icon-telegram" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <% if setting['instagram_handle'] %>
            <li class="inline-block">
              <%= link_to "https://www.instagram.com/#{setting['instagram_handle']}", target: "_blank",
                          title: t("shared.go_to_page") + t("social.instagram", org: 'EsGlobal') + t('shared.target_blank_html') do %>
                <span class="show-for-sr"><%= t("social.instagram", org: 'EsGlobal') %></span>
                <span class="icon-instagram" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <%= raw content_block("footer", I18n.locale) %>
  </div>
</footer>
